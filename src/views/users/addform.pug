head
  link(rel="stylesheet", href="/css/addform.css")
  title= title

block content
  .container
    h2= title
    form(method="POST", action=actionUrl)
      .form-group
        label(for="name") Full Name:
        input#name(type="text", name="name", value=(user && user.name) || '', required)
      
      .form-group
        label(for="age") Age:
        input#age(type="number", name="age", value=(user && user.age) || '', required)

      .form-group
        label(for="email") Email:
        input#email(type="email", name="email", value=(user && user.email) || '', required)

      .form-group
        label(for="hobbies") Hobbies (comma separated):
        input#hobbies(type="text", name="hobbies", value=(user && user.hobbies.join(', ')) || '')

      button(type="submit")= buttonText
      a.cancel(href="/home/users") Cancel
